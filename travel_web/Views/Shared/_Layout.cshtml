<body>
    @{ 
        travelUser user = null;

        if(Session["login"] != null)
        {
            user = Session["login"] as travelUser;
        }
    }

    <div class="colorlib-loader"></div>
    <div id="page">
        <nav class="colorlib-nav" role="navigation">
            <div class="top-menu">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-2">
                            <div id="colorlib-logo"><a href="/Home">in Travel</a></div>
                        </div>
                        <div class="col-xs-10 text-right menu-1">
                            <ul>
                                <li class="active"><a href="/Home"><span class="glyphicon glyphicon-home"></span>Home</a></li>
                                @if (user != null)
                                {
                                    <li><a href="#">Administration</a></li>
                                }
                                <li><a href="/Home/Blog">Blog</a></li>
                                <li><a href="/Home/Travel">Travel</a></li>
                                <li><a href="/Home/AboutMe">About Me</a></li>
                                <li><a href="/Home/Contact">Contact</a></li>
                                @if (user == null)
                                {
                                    <li><a href="/Home/Login">Login</a></li>
                                    <li><a href="/Home/Register">Register</a></li>
                                }
                                else
                                {
                                    <li><a href="/Home/ShowProfile">@user.Username</a></li>
                                    <li><a href="/Home/Logout">LogOut</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        @RenderBody()

