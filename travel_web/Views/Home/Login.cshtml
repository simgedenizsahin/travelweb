@using travel_web.Entities.ValueObjects
@model LoginViewModel

@{
    ViewBag.Title = "travel_web - Login";
}
<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


@using (Html.BeginForm())
{
    <body>
        <div id="login">
            <div class="container">
                <div id="login-row" class="row justify-content-center align-items-center">
                    <div id="login-column" class="col-md-6">
                        <div id="login-box" class="col-md-12">
                            <form id="login-form" class="form" action="" method="post">
                                <h3 class="text-center text-info">Login</h3>
                                
                                @Html.ValidationSummary(false)
                                @if (ViewBag.SetLink != null)
                                {
                                    <a href="@ViewBag.SetLink" class="btn btn-primary">Activate </a>
                                }
                                <div class="form-group">
                                    <label for="username" class="text-info">Username:</label><br>
                                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username" })
                                </div>
                                <div class="form-group">
                                    <label for="password" class="text-info">Password:</label><br>
                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Password", type = "password" })
                                </div>
                                <div class="form-group">
                                    <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
}


<script>
    $(function () {
        $("footer").hide();
    });
</script>

